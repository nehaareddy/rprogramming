# Create a 5x4 matrix filled by rows
matrix_rows <- matrix(1:20, nrow = 5, byrow = TRUE, dimnames = list(paste0("Row", 1:5), paste0("Col", 1:4)))

# Create a 3x3 matrix with labels and fill the matrix
matrix_labels <- matrix(letters[1:9], nrow = 3, byrow = TRUE, dimnames = list(paste0("Row", 1:3), paste0("Col", 1:3)))

# Create a 2x2 matrix with labels and fill the matrix by columns
matrix_columns <- matrix(letters[1:4], nrow = 2, dimnames = list(paste0("Row", 1:2), paste0("Col", 1:2)))

# Print the matrices
print("Matrix filled by rows:")
print(matrix_rows)

print("Matrix with labels and filled by rows:")
print(matrix_labels)

print("Matrix with labels and filled by columns:")
print(matrix_columns)
